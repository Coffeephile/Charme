<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.charmeapp"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="10"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.charmeapp.ActivityLogin"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.charmeapp.UserList"
            android:label="@string/title_activity_user_list" >
        </activity>
        <activity
            android:name="com.example.charmeapp.Conversation"
            android:label="@string/title_activity_conversation" >
        </activity>
        <activity
            android:name="com.example.charmeapp.Talks"
            android:label="@string/title_activity_talks" >
        </activity>
        <activity
            android:name="com.example.charmeapp.TalksMessages"
            android:label="@string/title_activity_talks_messages"
            android:windowSoftInputMode="stateHidden" >
        </activity>
        <activity
            android:name="com.example.charmeapp.ImageViewer"
            android:label="@string/title_activity_image_viewer" >
        </activity>
    </application>

</manifest>
